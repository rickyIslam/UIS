<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    <script src="~/ckeditor/ckeditor.js"></script>

    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

    <link href="~/Content/CustomBootstrap.css" rel="stylesheet" />


</head>
<body>

    @* Navbar starts Here *@
    <nav class="my-navbar navbar navbar-inverse navbar-fixed-top" role="navigation">
        <!-- Brand and toggle get grouped for better mobile display -->

        <div style="width: 500px; margin: 0 auto;" class="container">
            <form id="myForm22" role="form">

                <div class="form-inline">
                    <div class="row">
                        <div class="col-md-10">
                            <input type="text" placeholder="Write Your Message..." class="form-control" style="height: 50px !important;width: 100% !important;font-size: 14px !important;" name="message" id="message">
                        </div>
                        <div class="col-md-2">
                            <input type="button" class="btn btn-default btn-lg" id="btnSubmit22" value="Send" />


                        </div>
                    </div>

                </div>
            </form>
        </div>

        <!-- Collect the nav links, forms, and other content for toggling -->
    </nav>

    @* Navbar Ends Here *@

    @* Side table Strats here *@

    <div>&nbsp;</div>
    <div>&nbsp;</div>

  
        <div class="col-md-12">

            <div class="container body-content">
                @RenderBody()
                <hr />

            </div>
        </div>









    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
