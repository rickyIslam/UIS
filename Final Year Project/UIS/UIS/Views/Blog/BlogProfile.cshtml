@using UIS.Models;
@model IEnumerable<Post>


@{
    ViewBag.Title = "";
}


<div class="container-fluid">
    <div class="row">

        <div class="col-md-3">
            <div>&nbsp;</div>

            <div class="panel-group">
                <div class="panel panel-default">
                    <div class="panel-heading"><p>আপনার প্রোফাইল</p></div>
                    <div class="panel-body">

                        @{
                            string propic = Session["photo"].ToString();
                        }


                        <img src="~/proPic/@propic" alt="" class="img-thumbnail" width="300" height="300">
                        <p>পুরো নামঃ<strong>@Session["userName"].ToString()</strong></p>
                        <p>সংক্ষিপ্ত নামঃ<strong>@Session["userNick"].ToString()</strong></p>
                        <p>ফ্যাকাল্টিঃ<strong>@Session["userFaculty"].ToString()</strong></p>
                        <p>স্টুডেন্ট আইডিঃ<strong>@Session["userId"].ToString()</strong></p>



                    </div>
                </div>
            </div>

            <div>&nbsp;</div>


            <div class="panel-group">
                <div class="panel panel-default">
                    <div class="panel-heading"><p>একনজরে আপনার লেখা ব্লগ গুলো</p></div>
                    <div class="panel-body">

                    

                        @foreach (Post post in Model.Reverse())
                        {
                           

                            @SideRecentPosts.Render(post, Html)
                       
                          
                        }

                    </div>
                </div>
            </div>


            

        </div>

        <div class="col-md-6">
            <div>&nbsp;</div>
           
            @if (Session["userNick"] != null)
            {
                <div class="alert alert-success">
                    <p class="text-center">আপনার ব্লগে আপনাকে স্বাগতম...<strong>@Session["userNick"].ToString() !!!&nbsp;</strong><a href="~/Blog/CreatePost">নতুন ব্লগ লিখুন</a></p>
                </div>
            }
            else
            {
                <div class="alert alert-danger">
                    <p class="text-center">  সাইটের পূর্ণ সুবিধা পেতে অনুগ্রহ পূর্বক <strong><a href="~/Blog/LogInStudent">লগিন করুন</a></strong></p>
                </div>
            }

            <div class="row">
                <div class="col-md-12">
                    @foreach (Post post in Model.Reverse())
                    {

                        <div class="panel panel-default">
                            <div class="panel-body">
                                @PostAdminHelper.Render(post, Html, true)
                            </div>
                        </div>

                    }


                </div>
            </div>

        </div>
        <div class="col-md-3">
            <div>&nbsp;</div>

            <div class="panel panel-default">
                <div class="panel-heading">বিজ্ঞাপনের জন্য নির্ধারিত স্থান</div>
                <div class="panel-body">

                    @* ক্যারোসল শুরু *@


