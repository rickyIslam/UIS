@using UIS.Models;
@model IEnumerable<SemesterFee>
@{
    ViewBag.Title = "enrollReq";
    Layout = "~/Views/Shared/_DeanOfficeSideNav.cshtml";
}

<h1 style="text-align:center;text-decoration:underline;color:green;">All Enrollment Requests</h1>
<div>&nbsp;</div>
@foreach (SemesterFee semesterFee in Model)
{
    <div class="panel panel-default">
        <div class="panel-body">


            <table class="table table-bordered">


                @{
    string payForSemester = semesterFee.payForSemester;
    string payableSemester = null;
    if (payForSemester == "1")
    {
        payableSemester = "Level:1 / Semester:1";
    }
    if (payForSemester == "2")
    {
        payableSemester = "Level:1 / Semester:2";
    }
    if (payForSemester == "3")
    {
        payableSemester = "Level:2 / Semester:1";
    }
    if (payForSemester == "4")
    {
        payableSemester = "Level:2 / Semester:2";
    }
    if (payForSemester == "5")
    {
        payableSemester = "Level:3 / Semester:1";
    }
    if (payForSemester == "6")
    {
        payableSemester = "Level:3 / Semester:2";
    }
    if (payForSemester == "7")
    {
        payableSemester = "Level:4 / Semester:1";
    }
    if (payForSemester == "8")
    {
        payableSemester = "Level:4 / Semester:2";
    }
                }

                <h3 style="text-align:center;font-weight:bold;">@payableSemester (Semester Fees Transaction)</h3>
                <thead>
                    <tr>
                        <th>Student ID</th>

                        <th style="text-align:center;">Date/Time</th>
                        <th>Receipt ID</th>
                        <th>Amount</th>
                        <th>View Students Profile</th>
                        <th>Final Enrollment Status</th>


                    </tr>
                </thead>

                <tbody>

                    <tr>

                        <td><span class="pull-left glyphicon glyphicon-calendar">@semesterFee.studentId</span></td>

                        <td><span class="pull-left glyphicon">@semesterFee.dateTime</span></td>
                        <td><span class="pull-left glyphicon">@semesterFee.receiptId</span></td>
                        <td><span class="pull-left glyphicon">@semesterFee.amount</span></td>

                        <td><span class="pull-left glyphicon">Under Construction</span></td>
                        <td>
                            
                            @using (Html.BeginForm("enrollConfirm", "DeanOffice", new { studentId = @semesterFee.studentId, faculty = @semesterFee.faculty, dateTime = @semesterFee.dateTime, payForSemester = @semesterFee.payForSemester, receiptId = @semesterFee.receiptId, amount = @semesterFee.amount }, FormMethod.Post, new { enctype = "multipart/form-data" }))
                            {
                                    
                                <div class="form-group"> <input type="submit" value="Confirm Enrollment" class="btn btn-primary">  </div>

                            }


                        </td>

                    </tr>
                </tbody>

            </table>

        </div>
    </div>

}
