
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Global.cshtml";
}


<div>&nbsp;</div>
<div class="well" ng-controller="insert">

    <h2>Hover Rows</h2>
    <p>The .table-hover class enables a hover state on table rows:</p>
    <table class="table table-hover">
        <thead>
            <tr>
                <th>Student ID</th>
                <th>Name</th>
                <th>Sex</th>
                <th>Email ID</th>
                <th>Father</th>
                <th>Mother</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody ng-repeat="e in insert">


            <tr>
                <td>{{e.studentId}}</td>
                <td>{{e.name}}</td>
                <td>{{e.sex}}</td>
                <td>{{e.email}}</td>
                <td>{{e.father}}</td>
                <td>{{e.mother}}</td>
                <td><a href="/dynamic/update?id={{e.studentId}}">Edit</a></td>
                <td><a ng-click="deleteRecord(e.studentId)">Delete</a></td>
            </tr>

        </tbody>
    </table>


</div>

